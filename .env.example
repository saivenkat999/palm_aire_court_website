# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Production PostgreSQL database (Supabase recommended)
DATABASE_URL="postgresql://postgres.xxxxx:your_password@aws-1-us-east-1.pooler.supabase.com:6543/postgres"

# Supabase Configuration
# Get these from your Supabase project settings -> API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"

# Stripe Payment Configuration
# Get these from your Stripe dashboard -> Developers -> API keys
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"

# GoHighLevel CRM Integration (Optional)
# Get this from your GoHighLevel app -> API Keys
GHL_API_KEY="your_ghl_api_key_here"
SESSION_SECRET="your-super-secret-session-key-here"
